{
  "name": "clouddocs-backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "dev:watch": "ts-node src/index.ts",
    "format": "npx prettier --write .",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --runInBand",
    "test:unit": "cross-env NODE_ENV=test jest --config jest.unit.config.js --detectOpenHandles --runInBand",
    "test:integration": "cross-env NODE_ENV=test jest --testPathPattern=tests/integration --detectOpenHandles --runInBand",
    "test:watch": "cross-env NODE_ENV=test jest --watch --runInBand",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --runInBand",
    "test:coverage:unit": "cross-env NODE_ENV=test jest --config jest.unit.config.js --coverage --runInBand",
    "test:coverage:main": "cross-env NODE_ENV=test COVERAGE_DIR=coverage/main jest --coverage --runInBand",
    "test:coverage:unit:ci": "cross-env NODE_ENV=test COVERAGE_DIR=coverage/unit jest --config jest.unit.config.js --coverage --runInBand",
    "test:ci": "npm run test:coverage:main && npm run test:coverage:unit:ci && npm run test:ci:report",
    "test:ci:report": "node scripts/merge-coverage.js",
    "seed:dev": "ts-node scripts/seed-dev.ts"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.10.0",
    "@types/node-cron": "^3.0.11",
    "bcryptjs": "^2.4.3",
    "cookie": "^1.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csrf-csrf": "^4.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.22.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "mammoth": "^1.11.0",
    "mongodb": "^7.1.0",
    "mongoose": "^7.8.8",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.12",
    "ollama": "^0.6.3",
    "openai": "^6.22.0",
    "pdf-parse": "^2.4.5",
    "tesseract.js": "^2.1.5",
    "socket.io": "^4.8.3",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie": "^0.6.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/express-mongo-sanitize": "^1.3.2",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.96",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.1",
    "@types/nodemailer": "^7.0.5",
    "@types/pdf-parse": "^1.1.5",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "cross-env": "^10.1.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^11.0.1",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
